package com.awad.springboot;

import org.springframework.beans.factory.annotation.Autowired;tMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.Re
import org.springframework.web.bind.annotation.RestController;stController;

import com.awad.service.WelcomeService;

@RestController
public class WelcomeController {
	@Autowired
	private WelcomeService service;

	@GetMapping("/welcome")
	public String welcome() {
		return service.retrieveWelcomeMessage();
	}

	@RequestMapping("/")
	public String home() {
		return "index.html";
	}

}
